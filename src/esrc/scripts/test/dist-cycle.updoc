    ?? in new vat Alice

    ? introducer.onTheAir()
    # value: ["3DES_SDH_M2", "3DES_SDH_M"]

    ? def [ap,ar] := Ref.promise()
    # value: [<Promise>, <Open Resolver>]

    ? def apURI := introducer.sturdyToURI(makeSturdyRef(ap))

    ? <file:~/Desktop/ap.cap>.setText(apURI)


    ?? in new vat Bob

    ? introducer.onTheAir()
    # value: ["3DES_SDH_M2", "3DES_SDH_M"]

    ? def [bp,br] := Ref.promise()
    # value: [<Promise>, <Open Resolver>]

    ? def bpURI := introducer.sturdyToURI(makeSturdyRef(bp))

    ? <file:~/Desktop/bp.cap>.setText(bpURI)

    ? def apURI := <file:~/Desktop/ap.cap>.getText().trim()

    ? def ap := introducer.sturdyFromURI(apURI).getRcvr()
    # value: <Promise>

    ? [bp,br,ap]
    # value: [<Promise>, <Open Resolver>, <Promise>]


    ?? in vat Alice

    ? def bpURI := <file:~/Desktop/bp.cap>.getText().trim()

    ? def bp := introducer.sturdyFromURI(bpURI).getRcvr()
    # value: <Promise>

    ? [ap,ar,bp]
    # value: [<Promise>, <Open Resolver>, <Promise>]

    ? ar.resolve(bp)


    ?? in vat Bob

    ? [bp,br,ap]
    # value: [<Promise>, <Open Resolver>, <Promise>]

    ? br.resolve(ap)

    ?

    ? [bp,br,ap]
    # value: [<Promise>, <Closed Resolver>, <Promise>]


    ?? in vat Alice

    ? [ap,ar,bp]
    # value: [<Promise>, <Closed Resolver>, <Promise>]
