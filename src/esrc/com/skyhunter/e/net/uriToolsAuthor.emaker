def uriToolsMaker(introducer,makeSturdyRef) :any {
    def uriTools {
        to promiseObject(uri) :any {
            introducer.sturdyFromURI(uri).getRcvr()
        }
        to makeURI(obj) :any {
            introducer.sturdyToURI(makeSturdyRef(obj))
        }
    }
}


