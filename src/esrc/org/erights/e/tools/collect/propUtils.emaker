def propUtils {

    to testProp(props, propName :String) :boolean {
        def propValue := props.fetch(propName, thunk{"false"})
        switch (propValue) {
            match `true`  { true }
            match `false` { false }
            match _ { throw(`$propValue must be true or false`) }
        }
    }
}

